{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comtrad list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comtrad in comtrads %}
            <tr>
                <td><a href="{{ path('comtrad_show', { 'id': comtrad.id }) }}">{{ comtrad.description }}</a></td>
                <td>{{ comtrad.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comtrad_show', { 'id': comtrad.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('comtrad_edit', { 'id': comtrad.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comtrad_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
